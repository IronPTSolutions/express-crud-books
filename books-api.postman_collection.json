{
  "info": {
    "name": "Books CRUD API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "bookId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Create Book",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Don Quijote de la Mancha\",\n  \"author\": \"Miguel de Cervantes\",\n  \"publishedYear\": 1605,\n  \"genre\": \"Novela\",\n  \"summary\": \"Las aventuras del ingenioso hidalgo Don Quijote y su escudero Sancho Panza.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/books",
          "host": ["{{baseUrl}}"],
          "path": ["books"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.collectionVariables.set('bookId', res._id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "List Books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books",
          "host": ["{{baseUrl}}"],
          "path": ["books"]
        }
      },
      "response": []
    },
    {
      "name": "Get Book by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["books", "{{bookId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Book",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"publishedYear\": 1615,\n  \"summary\": \"Segunda parte de las aventuras del ingenioso hidalgo.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/books/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["books", "{{bookId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Book",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books/{{bookId}}",
          "host": ["{{baseUrl}}"],
          "path": ["books", "{{bookId}}"]
        }
      },
      "response": []
    }
  ]
}
